# logo key
set $mod Mod4

# workspaces
set $ws0 0
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10
set $ws11 11
set $ws12 12
set $ws13 0′
set $ws14 1′
set $ws15 2′
set $ws16 3′
set $ws17 4′
set $ws18 5′
set $ws19 6′
set $ws20 7′
set $ws21 8′
set $ws22 9′
set $ws23 10′
set $ws24 11′
set $ws25 12′

# terminal
set $term termite

# monitors
set $left HDMI-1
set $right HDMI-2

# launcher
# set $menu dmenu_run -fn "Noto Sans UI Regular 10" -i -l 5
set $menu i3-dmenu-desktop --dmenu='dmenu -i -l 5 -fn "Noto Sans UI Regular:pixelsize=14"'

# kill focused window
bindsym $mod+Shift+q kill

# launch stuff
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym XF86Calculator exec gnome-calculator
bindsym $mod+XF86TouchpadToggle exec $term -e "zsh -c 'nvim ~/.config/i3/config'"
bindsym $mod+c exec google-chrome-stable
bindsym $mod+g exec firefox
bindsym $mod+q exec qutebrowser
bindsym $mod+n exec nautilus
bindsym $mod+e exec $term -e "zsh -c 'mutt'"
bindsym $mod+i exec $term -e "zsh -c 'tmux attach'"
bindsym $mod+m workspace $ws0; exec $term -e "zsh -c 'cmus'"
bindsym $mod+t exec corebird

# brightness
bindsym XF86MonBrightnessUp exec brightnessctl s 10%+
bindsym XF86MonBrightnessDown exec brightnessctl s 10%-

# media keys
bindsym XF86AudioPrev exec cmus-remote -r
bindsym XF86AudioNext exec cmus-remote -n
bindsym XF86AudioPlay exec cmus-remote -u
bindsym XF86AudioRaiseVolume exec volume.zsh up
bindsym XF86AudioLowerVolume exec volume.zsh down
bindsym XF86AudioMute exec volume.zsh mute

# screenshots
bindsym Print exec "maim -g $(slop) > ~/screenshot-$(date +'%Y%m%d%H%M%S').png"

floating_modifier $mod

# reload the configuration file
bindsym $mod+Shift+r restart
bindsym $mod+Shift+c reload

# exit i3
bindsym $mod+Shift+e exec zenity --question --text="Are you sure you want to exit i3?" && i3-msg -t command "exit"

# Move your focus around with $mod+[h|j|k|l], like vim
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# _move_ the focused window with the same, but add Shift
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move windows to different monitors
bindsym $mod+Ctrl+Shift+Left move container to output left
bindsym $mod+Ctrl+Shift+Right move container to output right

# resize
bindsym $mod+Shift+Left resize shrink width 10 px
bindsym $mod+Shift+Right resize grow width 10 px
bindsym $mod+Shift+Down resize shrink height 10 px
bindsym $mod+Shift+Up resize grow height 10 px
 
# assign to outputs
workspace $ws0 output $right
workspace $ws1 output $right
workspace $ws2 output $right
workspace $ws3 output $right
workspace $ws4 output $right
workspace $ws5 output $right
workspace $ws6 output $right
workspace $ws7 output $left
workspace $ws8 output $left
workspace $ws9 output $left
workspace $ws10 output $left
workspace $ws11 output $left
workspace $ws12 output $left

# switch to workspace
bindsym $mod+asciitilde workspace $ws0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+minus workspace $ws11
bindsym $mod+equal workspace $ws12
bindsym $mod+Ctrl+asciitilde workspace $ws13
bindsym $mod+Ctrl+1 workspace $ws14
bindsym $mod+Ctrl+2 workspace $ws15
bindsym $mod+Ctrl+3 workspace $ws16
bindsym $mod+Ctrl+4 workspace $ws17
bindsym $mod+Ctrl+5 workspace $ws18
bindsym $mod+Ctrl+6 workspace $ws19
bindsym $mod+Ctrl+7 workspace $ws20
bindsym $mod+Ctrl+8 workspace $ws21
bindsym $mod+Ctrl+9 workspace $ws22
bindsym $mod+Ctrl+0 workspace $ws23
bindsym $mod+Ctrl+minus workspace $ws24
bindsym $mod+Ctrl+equal workspace $ws25

# move focused container to workspace
bindsym $mod+Shift+asciitilde move container to workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
bindsym $mod+Shift+minus move container to workspace $ws11
bindsym $mod+Shift+equal move container to workspace $ws12
bindsym $mod+Ctrl+Shift+asciitilde move container to workspace $ws13
bindsym $mod+Ctrl+Shift+1 move container to workspace $ws14
bindsym $mod+Ctrl+Shift+2 move container to workspace $ws15
bindsym $mod+Ctrl+Shift+3 move container to workspace $ws16
bindsym $mod+Ctrl+Shift+4 move container to workspace $ws17
bindsym $mod+Ctrl+Shift+5 move container to workspace $ws18
bindsym $mod+Ctrl+Shift+6 move container to workspace $ws19
bindsym $mod+Ctrl+Shift+7 move container to workspace $ws20
bindsym $mod+Ctrl+Shift+8 move container to workspace $ws21
bindsym $mod+Ctrl+Shift+9 move container to workspace $ws22
bindsym $mod+Ctrl+Shift+0 move container to workspace $ws23
bindsym $mod+Ctrl+Shift+minus move container to workspace $ws24
bindsym $mod+Ctrl+Shift+equal move container to workspace $ws25

# splits
bindsym $mod+b splith
bindsym $mod+v splitv

# Switch the current container between different layout styles
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+p layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# move focus to the parent container
bindsym $mod+a focus parent

# window overrides
for_window [title="corebird"] floating enable
for_window [title="gnome-calculator"] floating enable
for_window [title="Open Files"] floating enable
for_window [title="Open File"] floating enable
for_window [title="zenity"] floating enable
for_window [title="Unlock Login Key"] floating enable

# scratchpad
bindsym $mod+Shift+backslash move scratchpad
bindsym $mod+backslash scratchpad show

# statusbar
bar {
    position top
    font pango:Noto Sans UI 10
    status_command zsh -c "~/src/stag/stag.py server"
    separator_symbol "|"
    colors {
        statusline #e2e4e9
        background #000000
        focused_workspace #4c7899ff #285577ff #e2e4e9ff 
        active_workspace #333333ff #5f676aff #e2e4e9ff
        inactive_workspace #000000ff #000000ff #5c5c5cff
    }
    tray_padding 3
    tray_output $left
    bindsym button4 nop
    bindsym button5 nop
}

# window decorations/borders
new_window pixel 2
new_float pixel 2
hide_edge_borders both
font pango:Noto Sans UI 10

# gaps
gaps inner 8
smart_gaps on

# exec
exec_always "feh --bg-scale --no-fehbg ~/Pictures/Wallpapers/ashley-knedler-43546.jpg"
exec pidgin
exec "xmodmap ~/.config/x11/xmodmaprc"
