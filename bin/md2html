#!/Users/zandr/bin/venv/bin/python
import markdown
import os
from sys import argv

if len(argv) < 2:
    self = os.path.basename(argv[0])
    print(f'Usage: {self} input.md [output.html]')
    exit()

mdfile = argv[1]
htmlfile = argv[2] if len(argv) > 2 else mdfile.replace('.md', '.html')

with open(mdfile, 'r') as input_file, open(htmlfile, 'w') as output_file:
    output_file.write(markdown.markdown(input_file.read()))
