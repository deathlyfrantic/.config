# exec_always zsh -c 'while true; do ~/Code/swaystag/swaystag.py block --sort_order 999 --name "clock" --full_text "$(date +\'%r\')"; sleep 1; done'
# exec_always zsh -c 'sleep 3; ~/.config/sway/volume.zsh'
exec_always xrdb -load ~/.config/x11/xresources
